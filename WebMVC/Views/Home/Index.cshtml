@using WebMVC.Models;
@model Tuple<List<UserFront>, UserFront>

@{
    ViewData["Title"] = "Home Page"; 
    
}

<div class=container>
    <h2>Formulário Usuarios</h2> 
        <p>Clique no botão abaixo para adicionar ou na lista para editar:</p>
</div>
<div class=container>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal"> <i class="fa fa-plus"></i> Adicionar</button><br /><br />
    <table class="table" id="tblCustomers">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>CPF/CNPJ</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Item1)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.CpfCnpj)</td>
                    <td>
                        <a class='btn btn-primary btn-sm' href="@Url.Action("EditarUsuario","Home")/@item.Id" ><i class='fa fa-pencil'></i> Edit</a>
                        <a href="@Url.Action("DeleteUser","Home")/@item.Id"  onclick="return confirm('Deseja exluir esse registro?')"
                           class='btn btn-danger btn-sm' id='btnDelete' style='margin-left:5px'><i class='fa fa-trash'></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @using (Html.BeginForm("PostUser", "Home", FormMethod.Post))
    {
        <div id="myModal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Incluir Novo Usuário</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="hidden" id="hfId" name="id" />
                            <label>Nome:</label>                      
                            <input type="text" id="txtNome" name="nome" value="" class="form-control" required/>
                        </div>
                        <div class="form-group">
                            <label>Email:</label>
                            <input type="text" id="txtEmail" name="email" value="" class="form-control" required/>
                        </div>
                        <div class="form-group">
                            <label>CPF/CNPJ:</label>
                            <input type="text" id="txtCpfCnpj" name="cpfCnpj" value="" class="form-control" maxlength="11" required/>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Salvar</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    }       
</div>
